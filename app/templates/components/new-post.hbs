{{#em-modal-form configName="bs" id="new-post" on-submit="addPost" in-async=async}}
    {{#em-modal-title}}
        {{#em-modal-toggler class="close"}}<span aria-hidden="true">Ã—</span><span class="sr-only">Close</span>{{/em-modal-toggler}}
        <h4 class="modal-title">New Post</h4>
    {{/em-modal-title}}
    {{#em-modal-body}}
        {{#if async}}
            Submitting, please wait...
        {{else}}
            <h3>{{input id="title" value=title}}</h3>
            {{textarea value=body cols="45" rows="5"}}
        {{/if}}
    {{/em-modal-body}}
    {{#em-modal-footer}}
        <button type="submit" class="btn btn-primary" {{bind-attr disabled=async}}>Submit</button>
    {{/em-modal-footer}}
{{/em-modal-form}}
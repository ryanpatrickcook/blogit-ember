{{#em-modal-toggler modal-id="new-post" class="btn btn-secondary"}}Add Post{{/em-modal-toggler}}

{{new-post action="savePost"}}

<div class="row">
  {{#each post in model}}
    <div class="col-xs-6 col-lg-4">
      <h2>{{post.title}}</h2>
      <p>{{post.exerpt}}</p>
      {{#if post.isPublished}}
        <strong>Published {{moment post.publishDate 'LL'}}</strong>
      {{/if}}
      <p>{{#link-to 'post' post class="btn btn-primary" role="button"}}Read More &raquo;{{/link-to}}</p>
    </div><!--/.col-xs-6.col-lg-4-->
  {{/each}}
</div><!--/row-->

{{outlet}}